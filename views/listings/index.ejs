<% layout("/layouts/boilerplate") %>

<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin-right: 1.5rem;
        margin-top: 1rem;
        opacity: 0.75;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .tax-info{
        display: none;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 0.8rem;
        height: 3rem;
        padding: 1rem;
        margin: 1rem;
        display: flex;
        align-items: center;
    }
</style>
    <body>
        <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire-flame-curved"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-city"></i></div>
                <p>City Life</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Awesome View</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beachside</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Snowfall</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tree"></i></div>
                <p>Into the Nature</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-monument"></i></div>
                <p>Historic</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tent"></i></div>
                <p>Camping</p>
            </div>
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Default total after Taxes</label>
                </div>
            </div>
        </div>
        <!-- <h2>ALL LISTINGS!</h2> -->
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for(let item of list){%>
                <a href="/listings/<%=item._id%>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%= item.image.url %>" class="card-img-top" alt="item_image" style="height: 20rem;">
                        <div class="card-img-overlay">Click to know more!</div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= item.title %>
                                </b>
                                <br>
                                &#8377 <%=item.price.toLocaleString("en-IN")%> /night
                                <i class="tax-info">&nbsp; +18%GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>

    <script>
        let taxAdd=document.getElementById("switchCheckDefault");
        taxAdd.addEventListener("click", ()=>{
            let tax=document.getElementsByClassName("tax-info");
            for(i of tax){
                if(i.style.display!="inline"){
                    i.style.display="inline";
                }
                else{
                    i.style.display="none";
                }
            }
        })
    </script>